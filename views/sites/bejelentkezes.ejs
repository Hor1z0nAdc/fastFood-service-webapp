<form class="form bg-white rounded-md p-12" action="/bejelentkezes" method="POST" autocomplete="off">
  <div class="mb-4">
      <% if (messages.error) { %>
      <span class="text-red-700"><%= messages.error %></span>
      <% } %>
    <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
    <input type="email" id="email" name="email" class="label" value="<%= messages.email %>" data-testid="emailInput" required>
  </div> 
  <div class="mb-4">
    <label for="password" class="block text-gray-700 font-bold mb-2">Jelszó</label>
    <input type="password" id="password" name="password" class="label" data-testid="passwordInput" required>
  </div class="mb-6">
  <button class="reg-btn text-sm" type="submit" data-testid="loginBtn">bejelentkezés</button>
  <div class="mt-4 help-container">
    <a class=" text-sm font-bold text-form transition duration-200 linear hover:text-yellow-700" href="/regisztracio">Még nem regisztrált?</a>
  </div>
  <div class="mt-4">
    <a class="text-sm font-bold text-form transition duration-200 linear hover:text-yellow-700" href="/elfelejtett_jelszo">Elfelejtette a jelszavát?</a>
  </div>
</form>
