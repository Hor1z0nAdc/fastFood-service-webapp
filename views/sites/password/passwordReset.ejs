<form class="form bg-white rounded-md p-12" action="/elfelejtett_jelszo" method="POST" autocomplete="off">
  <h2 class="text-center mb-6">Új jelszó kéréshez kérjük, írd be a regisztrációkor megadott e-mail-címed, majd kattints az "Elküld" gombra.</h2>
  <label for="email" class="block text-gray-700 font-bold mb-2">Email</label>
  <input type="email" id="email" name="email" class="label" required>
  <div class="mb-4">
    <button class="reg-btn text-sm mt-6" type="submit">Elküld</button>
    
    <% if (messages.error) { %>
      <div class="text-center mt-6">
        <span class="text-red-700"><%= messages.error %></span>
      </div>
      <% } %> 
  
    <% if (messages.success) { %>
      <div class="text-center mt-6">
        <span class="text-green-600"><%= messages.success %></span>
      </div>
      <% } %>
    </div>
</form>
